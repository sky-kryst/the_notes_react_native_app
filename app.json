{
  "expo": {
    "name": "The Notes App",
    "slug": "the-notes-app",
    "description": "An app to create, share and edit notes with users over the net.",
    "platforms": ["ios", "android"],
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon1.png",
    "splash": {
      "image": "./assets/icon2.png",
      "resizeMode": "contain",
      "backgroundColor": "#BFBFBF"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "bundleIdentifier": "com.sky-kryst.the-notes-app",
      "buildNumber": "1.0.0",
      "supportsTablet": true
    },
    "android": {
      "package": "com.sky_kryst.the_notes_app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon1.png",
        "backgroundColor": "#BFBFBF"
      },
      "permissions": ["NOTIFICATIONS"]
    }
  }
}
